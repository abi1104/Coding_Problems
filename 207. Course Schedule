https://leetcode.com/problems/course-schedule/description/

import java.util.*;

class Solution {
    public boolean canFinish(int numCourses, int[][] prerequisites) {
        // build adjacency list sized by numCourses (include isolated nodes)
        List<List<Integer>> adj = new ArrayList<>();
        for (int i = 0; i < numCourses; i++) adj.add(new ArrayList<>());

        for (int[] p : prerequisites) {
            int course = p[0], prereq = p[1];
            adj.get(course).add(prereq); // edge course -> prereq
        }

        boolean[] visited = new boolean[numCourses];
        boolean[] recStack = new boolean[numCourses];

        for (int i = 0; i < numCourses; i++) {
            if (!visited[i]) {
                if (dfsDetectCycle(i, visited, recStack, adj)) {
                    return false; // cycle found -> cannot finish
                }
            }
        }
        return true; // no cycle found
    }

    private boolean dfsDetectCycle(int node, boolean[] visited, boolean[] recStack, List<List<Integer>> adj) {
        visited[node] = true;
        recStack[node] = true;

        for (int nei : adj.get(node)) {
            if (!visited[nei]) {
                if (dfsDetectCycle(nei, visited, recStack, adj)) return true;
            } else if (recStack[nei]) {
                return true; // back-edge -> cycle
            }
        }

        recStack[node] = false; // backtrack
        return false;
    }
}
