https://leetcode.com/problems/rotting-oranges/description/

class Solution {
    public int orangesRotting(int[][] grid) {
        Queue<int[]>q=new ArrayDeque<>();
        int m=grid.length;
        int n=grid[0].length;
        int fresh=0;
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(grid[i][j]==2)
                {
                    q.offer(new int[]{i,j});
                }
                else if(grid[i][j]==1)
                {
                    fresh++;
                }
            }
        }
        if(fresh==0) return 0;
        int[][] dir={{1,0},{-1,0},{0,1},{0,-1}};
        int min=0;
        while(!q.isEmpty())
        {
            int size=q.size();
            boolean isnowrotten=false;
            for(int k=0;k<size;k++)
            {
                int[] cur=q.poll();
                int r=cur[0],c=cur[1];
                for(int[] d:dir)
                {
                    int nr=r+d[0],nc=c+d[1];
                    if(nr>=0 && nr<m && nc>=0 && nc<n &&  grid[nr][nc]==1)
                    {
                        grid[nr][nc]=2;
                        q.offer(new int[]{nr,nc});
                        isnowrotten=true;
                        fresh--;
                        
                    }
                }
            }
            if(isnowrotten) min++;
        }
        return (fresh==0)?min:-1;
        
    }
}
