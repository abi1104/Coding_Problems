https://leetcode.com/problems/longest-increasing-subsequence/description/

class Solution {
    public int lengthOfLIS(int[] nums) {
        int n=nums.length;
        int[] tail=new int[n];
        int res=0;
        for(int num:nums)
        {
            int l=0,r=res;
            while(l<r)
            {
                int mid=l+((r-l)/2);
                if(tail[mid]<num)
                {
                    l=mid+1;
                }
                else
                {
                    r=mid;
                }
            }
            tail[l]=num;
    
            if(l==res) res++;

        }
        return res;
    }
}





class Solution {
    public int lengthOfLIS(int[] nums) {
       int n=nums.length;
       int[] dp=new int[n];
       dp[0]=1;
       int res=1;
       for(int i=1;i<n;i++)
       {
        int j=0;
        int val=0;
        while(j<i)
        {
            if(nums[j]<nums[i])
            {
                val=Math.max(val,dp[j]);
            }
            j++;
        }
        dp[i]=val+1;
        res=Math.max(res,dp[i]);
       }
       return res;

    }
}
